@{
	Layout = "~/Views/Shared/_Layout-bs3.cshtml";
	var formTitleAction = ViewBag.FormSubmitAction;
	var pageTitleAction = ViewBag.PageTitleAction;
	ViewBag.Title = pageTitleAction + " Placement";
}

@model BrightLine.Common.ViewModels.Entity.PlacementViewModel
@if (Model == null /* id not found, just display a message and bail. */)
{
	<div class="row">
		<div class="col-md-4 col-md-push-4">
			<div class="alert alert-info text-center">
				<h1>Id not found!</h1>
				<span>There is no data for this id.</span>
				<br />
				<br />
				<button class="btn btn-default" onclick="javascript:window.history.go(-1);">
					<span class="glyphicon glyphicon-arrow-left"></span>&nbsp;Go back
				</button>
			</div>
		</div>
	</div>
	return;
}

<style>
	.isNetwork {
		margin-top: 12px;
	}
</style>

<div id="campaign-content-container">
	<div class="row">
		<div class="col-md-12">
			<div class="widget stacked">
				<div class="widget-header">
					<i class="icon-tasks"></i>
					<h3>@formTitleAction Placement</h3>
				</div>
				<div class="widget-content">
					<form class="form-horizontal col-md-8" method="POST" action="/placements/save" enctype="multipart/form-data">

						@Html.HiddenFor(m => m.Id)

						<div class="form-group">
							@Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(model => model.Name)</div>
							</div>


						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.Height, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.TextBoxFor(m => m.Height, new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(model => model.Height)</div>
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.Width, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.TextBoxFor(m => m.Width, new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(model => model.Width)</div>
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.LocationDetails, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.TextBoxFor(m => m.LocationDetails, new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(model => model.LocationDetails)</div>
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.MediaPartners, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.SelectFor(m => m.SelectedMediaPartner, options: Model.MediaPartners, htmlAttributes: new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(m => m.SelectedMediaPartner)</div>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(m => m.AdTypeGroups, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.SelectFor(m => m.SelectedAdTypeGroup, options: Model.AdTypeGroups, htmlAttributes: new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(m => m.SelectedAdTypeGroup)</div>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(m => m.Categories, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.SelectFor(m => m.SelectedCategory, options: Model.Categories, htmlAttributes: new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(m => m.SelectedCategory)</div>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(m => m.Apps, new { @class = "col-sm-2 control-label" })

							<div class="form-field col-sm-6">
								@Html.SelectFor(m => m.SelectedApp, options: Model.Apps, htmlAttributes: new { @class = "form-control" })
								<div class="bg-danger hidden">@Html.ValidationMessageFor(m => m.SelectedApp)</div>
							</div>
						</div>

						<div class="form-group">
							<div class="form-field col-sm-6 col-sm-offset-2">
								<div id="notifier"></div>
							</div>
						</div>

						<div class="form-group validation-summary-container">
							<div class="form-field col-sm-6 col-sm-offset-2 validation-summary">
								@Html.ValidationSummary("", new { @class = "bg-danger" })
							</div>
						</div>

						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-8">
								<button class="btn btn-success" type="submit" style="margin-left: 20px;">@formTitleAction Placement</button>
								<a href="/placements/list" class="btn-cancel">Go back</a>
							</div>
						</div>

						

					</form>
				</div>
			</div>
		</div>
	</div>
</div>
