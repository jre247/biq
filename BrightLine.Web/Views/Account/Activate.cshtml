@using BrightLine.Web
@model BrightLine.Common.ViewModels.Account.ActivateViewModel
@{
	ViewBag.Title = "Account Activation";
	Layout = "~/Views/Shared/_Layout-bs3.cshtml";
}
@section styles{
	<link href="@Url.Content(string.Format("/assets/stylesheets/account.css{0}", string.Format("?c={0}", MvcApplication.AppIdentifier)))" rel="stylesheet" type="text/css" />
	<style>
		.account-container {
			width: 425px;
		}
	</style>
}
<div class="account-precontainer">
    <div class="account-container">
        <div class="content clearfix">


            <h1>Activate your account</h1>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <div class="bg-danger validation-summary">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
                if (!Model.Invalid)
                {

                    <p>Welcome to iQ. To get started, just enter a password for your account.</p>
                    <div class="form-group border-top border-bottom">
                        <i class="fa fa-lock"></i>
                        <label for="password">Password:</label>
                        @Html.PasswordFor(m => m.Password, new { name = "password", placeholder = "Password", @class = "form-control" })
                    </div>
			<!-- /control-group -->

                    <div class="form-group">
                        <button class="button btn btn-success" style="width: 100%">Continue</button>
                    </div>
                    @Html.HiddenFor(m => m.Token)
                    @Html.HiddenFor(m => m.SecondaryToken)
			<!-- .actions -->
                }
            }
        </div>
        <!-- /content -->
    </div>
</div>

