$deep-blue = #428BCA
$dark-gray = #66758c

#campaign{
  margin-left: -15px
  margin-right: -15px
  
  #campaign-content-header{
    background: #fff
    margin: 0
    padding: 0 20px
    border-bottom: 1px solid #eaecf1
    
    
    &:before{
      display: table
      content: " "
    }
    
    .title{
      padding: 10px 0 0
      
      .thumb{
        padding: 3px
        box-shadow: 0 1px 2px 0 rgba(0,0,0,.35)
        margin: 0 10px 0 0
        display: inline-block
        
        img{
          width: 40px
          height: 27px
          background-color: rgba(100,105,116,0.05)
        }
      }
      span{
        font-size: 15px
        font-weight: bold
        padding: 0 0 0
        line-height: 33px
        display: inline-block
      }
    }
    .breadcrumb{
      border: none
      background: none
      margin-bottom: 0
      padding: 15px 0 0
      //display: table
      display: none
    }
  }
  
  #campaign-nav-container{
    #campaign-nav{
      list-style: none
      margin-bottom: -3px
      padding: 0 0px
      
      .l1{
        color: $dark-gray
        display: inline-block
        line-height: 46px
                
        & > a{
          &:hover, &.active{
            color: $deep-blue
            border-bottom-color: $deep-blue
          }
          
          color: inherit  
          font-size: 12px
          text-transform: uppercase
          padding: 0 0 10px
          text-decoration: none
          border-bottom: 2px solid transparent
          transition: border-bottom-color .2s,color .5s,box-shadow .5s
                    
          & > .icon {
          }
          & > span {
            margin-left: 10px
          }
        }
        
        & + .l1{
          // Add left-margin to every link that's after the first one.
          margin-left: 60px
        }
      }
      i.icon{
        font-size: 12px
        color: inherit
        
        &:hover {
        }    
      }
    }
  }
  
  #campaign-content-container{    
    & > div{
      margin: 10px 0 0      
    }
  }
}
