.progress {
  width:100px
  height: 10px
  border: 1px solid #ccc
  border-radius: 0
  margin: 5px 0

  .progress-bar {
    background: #428bca
  }
}

#ads-listing-items-view {
  .col-actions{
    float: right
  }
  
  .gridlist-items{
    &.treelist-state-list{
      .col-name{
        width: 215px
      }
      .col-actions{
        width: 70px
      }
    }
    &.treelist-state-tree{
      .col-actions{
        width: 110px
      }
    }
  }
  .gridlist-items .gridlist-item.gridlist-item-list:last-child{
    border-bottom: 1px solid #e0dede
  }
  
  .placement-container{
    .placement-ads{
      margin: 0 30px 0 50px
      
      .col-ad-placement{
        display: none
      }
    }
  } 
  
  .deliverygroup-container{
    .deliverygroup-ads{
      margin: 0 30px 0 50px
      
      .col-ad-placement{
        display: none
      }
    }
  } 
}


