#campaigns-list {
  padding: 0
  margin: 0 0 40px
  clear: both
  min-height: 100px
  background-color: #fff
  // display: flex
  // flex-wrap: wrap
          
  .campaigns-item {
    width: 253px
    height: 220px
    padding: 0
    margin: 30px 16px 10px
    position: relative
    list-style: none
    background: #fff
    box-shadow: 1px 2px 5px rgba(0,0,0,0.25)
    float: left
    
    .campaigns-item-body {
      padding: 10px 10px 0
      height: 170px
      position: relative
      
      .campaigns-item-body-overlay {
        opacity: 0
        width: 233px
        height: 160px
        position: absolute
        top: 0
        left: 0
        z-index: 2
        margin: 10px 10px 0
        padding: 10px
        background: rgba(37,44,58,.88)
        color: #fff
        text-decoration: none
      }
      
      .campaigns-item-body-logo {
        background: center center no-repeat
        background-size: cover
        width: 100%
        height: 100%
        position: relative
        z-index: 1
      }
    }
    
    .campaigns-item-footer {
      background: #fff
      padding: 10px
      margin: 0
      height: 50px
      
      .glyphicon {
        font-size: 16px
        text-align: center
        line-height: 19px
        cursor: pointer
        top: 3px
        margin-right: 10px
      }
      
      .glyphicon + .glyphicon {
        border-left: 1px solid #ddd
      }
      
      .campaigns-item-footer-name {
        display:block
        line-height: 30px
        
        .campaigns-item-footer-time {
          float: right
        }
      }
      
      .campaigns-item-footer-tools {
        display: none
        text-align: right
        
        &> a {
          width: 37px
          height: 30px
          line-height: 27px
          // overflow: hidden
          padding: 0 10px
          border: 1px solid transparent
          border-radius: 2px
          cursor: pointer
          float:right
          position: relative
          text-decoration: none
          top: 0px
          left: 0px
          
          // &:hover {
          //   border: 1px solid #428bca
          //   color: #428bca
          //   width: auto            
          // }
        }
      }
    }
  }
  .campaigns-item:hover{
    
    .campaigns-item-body-overlay {
      opacity: 1
      transition: opacity .2s
    }
    
    .campaigns-item-body-overlay > span {
      display: block
    }
    
    .campaigns-item-footer-name {
      display: none
    }
    
    .campaigns-item-footer-tools {
      display: block
    }
  }
  
  .col-actions{
    width: 260px
  }
  
  .gridlist-item-list{
    .col-begin-date, .col-end-date{
      width: 120px
    }
  }
}

    

