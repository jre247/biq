  padding: 20px 0
  margin-left: -15px
  margin-right: -15px
  width: initial
}
#listing-nav{
  &> .row {
    margin: 0
    line-height: 30px
    background: #fff
    padding: 6px 0
    border-bottom: 1px solid #cecece
  }
  
  .nav-campaigns-left {
    padding-right: 0
    width: 480px
    
    .nav-campaigns-length {
      color: #778295
      margin-left: 15px
      font-size: 13px
      line-height: 34px
      float: left
      min-width: 130px
    }
    
    .nav-campaigns-search {
      width: 300px
      float: left
    }
    
    .nav-campaigns-search input[type='text']{
      /*width: calc(100% - 35px)*/
    }
  }


  .nav-campaigns-right {
    text-align: right
    -user-select: none
    -webkit-user-select: none
    -moz-user-select: none
    padding-left: 0
    width: 660px
    height: 34px
    
    .nav-campaigns-sorts {
      text-align: left
      min-width: 250px
      
      button {
        background-image: none
        background: #fff
        border: 1px solid #ccc
        
        &.starred {
          background: #3276b1
          border: 1px solid transparent
          color: #fff
        }
      }
      
      .btn-filter-favorites{
        i{
          margin-right: 5px
        }
      }
    }
    
    .nav-campaigns-create {
      text-align: right
      max-width: 50%
      /*min-width: 180px
      float: right*/
    }
    
    #status-filter-container{
      display: inline-block;
      line-height: initial;
      height: 34px
      position: relative
      margin-left: 5px
    
      .status-filter{
        &>div{display: inline-block}
        .status-filter-select-container{
          width: 135px
          display: inline-block
          line-height: 16px
          cursor: pointer
          
          .Select{
            top: -6px
          }
        }
        .status-filter-reset{
          margin: 0 0 0 10px
          cursor: pointer
          color: #ccc
          display: none
        }
        
        display: inline-block
        width: 135px
      }
    }
  }
} 

