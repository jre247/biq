.fields-container{
  .field-group-row{
    .field-group-column{
      .field-container{
        width: 100%!important;
      }
    }

    .field-group-column-1{
        margin-left: 25px;
    }
  }

  .field-group-row-label{
    position: relative;
    left: 22px;
    margin-right: 43px;
  }
}

.field-group-label{
  margin-right: 9px;
  font-weight: bold;
}

.fieldview{
  &.readonly .required label.control-label::after{
    display: none
  }

  .field-container{
    max-width: 500px

    .Select {
      position: relative !important;
    }

    input[type='checkbox'].form-control{
      width: 18px
      height: 18px
      margin: 10px 0 0
      outline: none !important
    }
  }

  .field-readonly{
    &.field-type-string{
      input{
        background: transparent
        box-shadow: none
        border: transparent
        font-weight: bold
        cursor: default
      }

    }

    &.field-type-select{
      .Select-placeholder{
        cursor: default
      }
      .option-text{
        font-weight: bold
      }
    }
  }
}

.validation-requirements-container{
  .validation-requirements{
    max-width: 500px
    padding: 5px 13px
    margin-top: 10px
    border-radius: 4px
    border: 1px solid #E6E1C5
  }
}
input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  margin: 0;
}
